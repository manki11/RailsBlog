<h5>Add Comments</h5>
<div class="comments-container">
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :username %><br>
      <%= f.text_field(:username, {:class => 'form-control'})%>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>

    <p>
      <%= f.submit({:class => 'btn btn-outline-primary btn-sm'}) %>
    </p>
  <% end %>
</div>