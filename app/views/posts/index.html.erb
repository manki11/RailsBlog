<div class="container">
  <% @posts.each do |post|%>
    <div class="card card-body bg-light">
      <h3><%= post.title %></h3>
      <p>
        <%= truncate post.body, length: 500 %>
      </p>
      <%= link_to "Read More", post_path(post), :class => 'btn btn-def' %>
    </div>
  <% end %>
</div>
